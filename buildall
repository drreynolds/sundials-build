#!/bin/bash -e

# remove previous installations
\rm -rf ../install* ../examples*

# 64-bit indices
./cleanup && SUNINDEXTYPE=64 SUNINSTALLPREFIX=$PWD/../install_int64 SUNEXAMPLEPREFIX=$PWD/../examples_int64 ./configure
make -j 5 install

# 32-bit indices
./cleanup && SUNINDEXTYPE=32 SUNINSTALLPREFIX=$PWD/../install_int32 SUNEXAMPLEPREFIX=$PWD/../examples_int32 ./configure
make -j 5 install
